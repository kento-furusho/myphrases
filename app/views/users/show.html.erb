<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
          <% if @user.avatar? %>
            <p class="avatar">
              <%= image_tag @user.avatar.url, :size => "170x170" %>
            </p>
          <% end %>
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user)%>" class="nav-link <%= 'acrive' if current_page?(user_path(@user)) %>">投稿 <span class="badge badge-secondary"><%= @count_phrases %></span></a></li>
      <li class="nav-item"><a href="#" class="nav-link">フォロー</a></li>
      <li class="nav-item"><a href="#" class="nav-link">フォロワー</a></li>
    </ul>
    <%= render 'phrases/phrases', phrases: @phrases %>
  </div>
</div>