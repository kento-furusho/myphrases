<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
          <% if user.avatar? %>
            <%= image_tag user.avatar.url , :size => '50x50' %>
          <% end %>
      <div class="media-body">
        <div>
          <%= user.name %>
        </div>
        <div>
          <p><%= link_to 'View profile', user_path(user) %></p>
        </div>
      </div>      
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>