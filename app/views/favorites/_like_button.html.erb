<% unless current_user == @user %>
  <% if current_user.favoriting?(phrase) %>
    <%= form_with(model: current_user.favorites.find_by(phrase_id: phrase.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :phrase_id, phrase.id %>
      <%= f.submit 'いいね！を取り消し', class: 'btn btn-success btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :phrase_id, phrase.id %>
      <%= f.submit 'いいね！', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>
<% end %>